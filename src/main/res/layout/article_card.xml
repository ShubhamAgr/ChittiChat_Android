<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="2dp"
        android:background="@drawable/my_rect"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/linearLayout2">

                <ImageView
                    android:layout_width="50dp"
                    android:background="#ff00ff"
                    android:layout_height="match_parent"
                    android:id="@+id/ArticleUser_profile_pic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Username"
                    android:id="@+id/ArticleUsername"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="This will show breif of the article"
                    android:id="@+id/ArticleBriefView"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/articleImageView"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="This will show full article"
                    android:id="@+id/ArticleTextView"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Like"
                android:paddingLeft="10dp"
                android:id="@+id/textView6"
                android:textColor="@color/com_facebook_blue"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Share"
                android:textColor="@color/com_facebook_blue"
                android:id="@+id/textView7"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp"
                android:layout_below="@+id/linearLayout3"
                android:layout_toRightOf="@+id/textView6"
                android:layout_toEndOf="@+id/textView6"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
