<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="6dp"
        android:elevation="2dp"
        android:padding="2dp"
        android:background="@drawable/my_rect"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:divider="@drawable/divider"
                android:id="@+id/linearLayout_card1">

                <!--<ImageView-->
                    <!--android:layout_width="60dp"-->
                    <!--android:background="@drawable/shape"-->
                    <!--android:src="@drawable/profile_icon4"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:id="@+id/ArticleUser_profile_pic_card1"/>-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Username"
                    android:textStyle="bold"
                    android:id="@+id/ArticleUsername_card1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="This will show full article"
                    android:id="@+id/articleTextView"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout_card1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout2_card1">

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                    <!--android:text="This will show brief of the article"-->
                    <!--android:id="@+id/ArticleBriefView"/>-->





            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Upvote"
                android:paddingLeft="10dp"
                android:id="@+id/like_card1"
                android:textColor="@color/com_facebook_blue"
                android:layout_below="@+id/linearLayout2_card1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                <!--android:text="Share"-->
                <!--android:textColor="@color/com_facebook_blue"-->
                <!--android:id="@+id/share_card2"-->
                <!--android:layout_marginLeft="68dp"-->
                <!--android:layout_marginStart="68dp"-->
                <!--android:layout_below="@+id/linearLayout2_card1"-->
                <!--android:layout_toRightOf="@+id/like_card1"-->
                <!--android:layout_toEndOf="@+id/like_card1"/>-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
