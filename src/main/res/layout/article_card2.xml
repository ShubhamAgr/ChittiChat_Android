<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/article_2_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:padding="2dp"
        android:background="@drawable/my_rect"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/linearLayout_card2">

                <ImageView
                    android:layout_width="60dp"
                    android:background="@drawable/shape"
                    android:src="@drawable/profile_icon4"
                    android:layout_height="match_parent"
                    android:id="@+id/ArticleUser_profile_pic_card2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Username"
                    android:id="@+id/ArticleUsername_card2"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout_card2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout2_card2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/profile_icon12"
                    android:id="@+id/ArticleImageView_card2"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Like"
                android:paddingLeft="10dp"
                android:id="@+id/like_card2"
                android:textColor="@color/com_facebook_blue"
                android:layout_below="@+id/linearLayout2_card2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Share"
                android:textColor="@color/com_facebook_blue"
                android:id="@+id/share_card2"
                android:layout_marginLeft="68dp"
                android:layout_marginStart="68dp"
                android:layout_below="@+id/linearLayout2_card2"
                android:layout_toRightOf="@+id/like_card2"
                android:layout_toEndOf="@+id/like_card2"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>